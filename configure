#!/usr/bin/env sh

if ! command -v cmake >/dev/null 2>&1; then
  echo "cmake is required to install this package. Please install it first." >&2
  exit 1
fi

cd src/include/json-schema-validator

# Create build directory
mkdir build
cd build

# Configure and build
cmake .. -DCMAKE_POSITION_INDEPENDENT_CODE=ON
make
